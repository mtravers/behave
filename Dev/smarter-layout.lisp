;;; be smarter about layout(defclass layout-block (proto-block)  ((tag :initarg :tag :accessor tag)   (needs-layout? :initform nil)))(defmethod* relayout ((block layout-block))  (setf needs-layout? t)  (if (layout-top? block)    (layout-block-recursive* block)    (relayout (view-container block))))(defmethod* layout-block-recursive* ((block layout-block))  (dosequence (sv (view-subviews block))    (call-if #'layout-block-recursive* sv))  (when needs-layout?    (layout-block block)    (setf needs-layout? nil)))