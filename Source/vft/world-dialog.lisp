(in-package :beh)(defun world-dialog (&aux dialog host-item)  (setf dialog        (make-instance          'color-dialog          :window-type          :movable-dialog          :window-title          "VFT World Parameters"          :view-position          '(:top 60)          :view-size          #@(300 150)          :close-box-p          nil          :view-font          '("Chicago" 12 :srcor :plain (:color-index 0))          :view-subviews          (list (make-dialog-item 'check-box-dialog-item #@(27 89) #@(94 19) "Standalone" 'nil)                (setf host-item                      (make-dialog-item                        'editable-text-dialog-item                       #@(29 48)                       #@(192 18)                       "yertle.media.mit.edu"                       'nil                       :allow-returns                       nil                       :draw-outline                       t))                (make-dialog-item                 'static-text-dialog-item                 #@(26 24)                 #@(95 16)                 "Server host:"                 'nil)                (make-dialog-item                 'button-dialog-item                 #@(145 124)                 #@(66 18)                 "Cancel"                 #'(lambda (item)                     (declare (ignore item))                     (window-close dialog))                 :default-button                 nil)                (make-dialog-item                 'button-dialog-item                 #@(225 125)                 #@(66 18)                 "OK"                 #'(lambda (item)                     (declare (ignore item))                     (window-close dialog)                     (if (check-box-checked-p (find-dialog-item dialog "standalone"))                       (standalone)                       (use-host (dialog-item-text host-item))))                 :default-button                 t)))))