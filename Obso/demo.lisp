(in-package :beh)(defun make-behave-window ()  (make-win :view-size #@(800 600))  (without-interrupts   (reset-species)   (defspecies shark     :pict (get-resource :|PICT| 302))   (defspecies fish     :pict (get-resource :|PICT| 300))   (scroll-to-type (generate-palette) 'agent)   (make-species-blocks)   ))'(u::on-startup (make-behave-window)  (make-behave-window))(defun medium-blocks ()  (setf *default-block-font* `("Tekton" 18 :bold))  (setf *standard-border* 2)  (setf *spacing* (round (* *standard-border* 2.5))))(defun small-blocks ()  (setf *default-block-font* `("Tekton" 14))  (setf *standard-border* 2)  (setf *spacing* (round (* *standard-border* 2.5))))(defun large-blocks ()  (setf *default-block-font* `("Tekton" 24 :bold))  (setf *standard-border* 3)  (setf *spacing* (round (* *standard-border* 2.5))))(medium-blocks)